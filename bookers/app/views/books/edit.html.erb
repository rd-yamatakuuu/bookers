<div class='name'>
  <h1>Editing Books</h1>
  <%= form_with model:@book, local:true do |f| %>

    <% if @book.errors.any? %>
      <div class='errorframe'>
        <h3>error!!!</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h5>Title</h5>
    <%= f.text_field :title %>
    <h5>Body</h5>
    <%= f.text_area :body %>
    <div class='submit'><%= f.submit'Update Book' %></div>
  <% end %>

  <div class='edit-new'>
    <%= link_to 'show', book_path(@book) %>
    <p class='space2'>|</p>
    <%= link_to 'Back', books_path %>
  </div>
</div>