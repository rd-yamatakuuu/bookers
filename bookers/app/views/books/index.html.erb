<h1 class='name'>Books</h1>

<main>

  <table>
    <tread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan='3'></th>
      </tr>
    </tread>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class='content'><%= book.title %></td>
          <td class='content'><%= book.body %></td>
          <td class='tab'><%= link_to "Show", book_path(book) %></td>
          <td class='tab'><%= link_to "Edit", edit_book_path(book) %></td>
          <td class='tab'><%= link_to "Destroy", book_path(book), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</main>

<div class='name'>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class='submit'><%= f.submit'Create Book' %></div>
  <% end %>
</div>