<h1 class='name'>Books</h1>

<main>

  <div class='titleframe'>
    <h4>title</h4>
    <div>
      <% @books.each do |book| %>
        <p><%= book.title %></p>
      <% end %>
    </div>
  </div>

  <div class='bodyframe'>
    <div>body</div>
      <div class='eachbutton'>
        <% @books.each do |book| %>
          <p><%= book.body %></p>
          <p class='tab'>Show</p>
          <p class='tab'>Edit</p>
          <p class='tab'>Destroy</p>
        <% end %>
      </div>
    </div>
  </div>

</main>

<div class='name'>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class='submit'><%= f.submit'Create Book' %></div>
  <% end %>
</div>